<div id="user-profile">
  <h3>Edit Profile</h3>
  <%= form_for current_user, url: profile_path, method: 'put', html: { multipart: true } do |f| %>
      <%= render 'shared/errors', object: current_user %>

      <div class="upload-preview">
        <img src="<%= current_user.photo.url %>" style="width: 10%; height: 10%"/>
      </div>
      <div class="form-group">
        <%= f.file_field :photo %>
      </div>
      <div class="form-group">
        <%= f.label :name %>
        <%= f.text_field :name %>
      </div>
      <div class="form-group">
        <%= f.label :email %>
        <%= f.text_field :email %>
      </div>
      <%= f.submit 'SAVE', class: 'btn btn-primary ' %>
  <% end %>
</div>